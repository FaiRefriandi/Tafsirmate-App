            android:fontFamily="@font/dmsans_medium"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
