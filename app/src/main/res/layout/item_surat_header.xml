<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Nama Arab -->
        <TextView
            android:id="@+id/tvNamaSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الفاتحة"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lateef_regular" />

        <!-- Nama Latin -->
        <TextView
            android:id="@+id/tvNamaLatin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Al-Fātiḥah"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/ijogelap"
            android:fontFamily="@font/googlesans_regular"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvArti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arti: Pembukaan"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/ijogelap"
            android:fontFamily="@font/googlesans_regular"
            android:layout_marginTop="2dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/ijogelap" />


        <!-- Info -->
        <TextView
            android:id="@+id/tvTempatTurun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat Turun: Mekah"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/googlesans_regular" />

        <TextView
            android:id="@+id/tvJumlahAyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Ayat: 7"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/googlesans_regular"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
