<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".onboarding.screens.SecondScreen">

    <ImageView
        android:id="@+id/iv_rectangle_2"
        android:layout_width="415dp"
        android:layout_height="415dp"
        android:src="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.1" />

    <TextView
        android:id="@+id/tv_greetings1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Tafsir Interaktif!"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_rectangle_2"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/tv_greetings2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Dapatkan tafsir ayat"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_greetings1_2"
        app:layout_constraintTop_toTopOf="@+id/iv_rectangle_2"
        app:layout_constraintVertical_bias="0.304" />

    <TextView
        android:id="@+id/tv_greetings3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="melalui teks atau perintah suara"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_greetings1_2"
        app:layout_constraintTop_toTopOf="@+id/iv_rectangle_2"
        app:layout_constraintVertical_bias="0.383" />

    <ImageView
        android:id="@+id/iv_btn_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ellipse_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/next_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="‎ ‎ ‎ ‎ ‎ ‎ "
        android:src="@drawable/ellipse_1"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_btn_2"
        app:layout_constraintEnd_toEndOf="@+id/iv_btn_2"
        app:layout_constraintStart_toStartOf="@+id/iv_btn_2"
        app:layout_constraintTop_toTopOf="@+id/iv_btn_2"
        app:layout_constraintVertical_bias="0.429" />

    <ImageView
        android:id="@+id/iv_btn_r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/iv_btn_2"
        app:layout_constraintEnd_toEndOf="@+id/iv_btn_2"
        app:layout_constraintStart_toStartOf="@+id/iv_btn_2"
        app:layout_constraintTop_toTopOf="@+id/iv_btn_2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/secondscreen"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>