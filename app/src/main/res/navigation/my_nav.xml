<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment2">

    <fragment
        android:id="@+id/splashFragment2"
        android:name="com.froztlass.tafsirmate.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment2_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment2"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment2_to_homeFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/splashFragment2"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment2_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/splashFragment2"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.froztlass.tafsirmate.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_homeFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_viewPagerFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ThirdScreen -->
    <fragment
        android:id="@+id/thirdScreen"
        android:name="com.froztlass.tafsirmate.onboarding.screens.ThirdScreen"
        tools:layout="@layout/fragment_third_screen" />

    <!-- MenuFragment -->
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.froztlass.tafsirmate.MenuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_chatHistoryFragment"
            app:destination="@id/chatHistoryFragment" />
    </fragment>

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.froztlass.tafsirmate.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- DetailFragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.froztlass.tafsirmate.DetailFragment"
        tools:layout="@layout/fragment_detail" />
    <!-- ProfileFragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.froztlass.tafsirmate.ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_thirdScreen_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/thirdScreen"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileFragment_to_chatHistoryFragment"
            app:destination="@id/chatHistoryFragment" />
    </fragment>

    <!-- ChatHistoryFragment -->
    <fragment
        android:id="@+id/chatHistoryFragment"
        android:name="com.froztlass.tafsirmate.ChatHistoryFragment"
        android:label="Riwayat Chat"
        tools:layout="@layout/fragment_chat_history">

        <action
            android:id="@+id/action_chatHistoryFragment_to_botFragment"
            app:destination="@id/botFragment" />
        <action
            android:id="@+id/action_chatHistoryFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/chatHistoryFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- BotFragment -->
    <fragment
        android:id="@+id/botFragment"
        android:name="com.froztlass.tafsirmate.BotFragment"
        android:label="ChatBot"
        tools:layout="@layout/fragment_bot" />
</navigation>
