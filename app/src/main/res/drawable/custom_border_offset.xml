<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border kanan, turun ke bawah -->
    <item
        android:left="100dp"
        android:top="20dp"
        android:right="0dp"
        android:bottom="0dp">
    <shape android:shape="rectangle">
        <size android:width="4dp" android:height="120dp"/> <!-- garis vertikal -->
        <solid android:color="#000000"/>
    </shape>
</item>

    <!-- Border bawah, geser ke kanan -->
<item
android:left="60dp"
    android:top="0dp"
    android:right="0dp"
    android:bottom="0dp">
<shape android:shape="rectangle">
<size android:width="100dp" android:height="4dp"/>
<solid android:color="#000000"/>
</shape>
    </item>

    <!-- Background putih dengan rounded corners -->
<item>
<shape android:shape="rectangle">
    <solid android:color="@android:color/white"/>
    <corners android:radius="20dp" />
</shape>
</item>

    </layer-list>
