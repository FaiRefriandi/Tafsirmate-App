<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border (luar) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/semi_dark" /> <!-- Warna border -->
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>